!!! xml utf-8
!!! strict
%html{:lang=>"en",:"xml:lang"=>"en", :xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %link{:href => "../Themes/Blank/reset.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
    %script{:src=>"../mootools/mootools-core-1.3.1-full-compat-yc.js", :type=>"text/javascript"}
    %script{:src=>"../mootools/mootools-more-1.3.1.1.js", :type=>"text/javascript"}
    - if request.path_info =~ /^\/build/
      %script{:src=>"/Packager.js", :type=>"text/javascript"}
    - if request.path_info =~ /^\/demos/ or request.path_info =~ /^\/themes/
      %script{:src=>"../Themes/Chrome/theme.js", :type=>"text/javascript"}
      %link{:href => "../Themes/gdotui/theme.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
      %script{:src=>"../builds/gdotui-latest.js", :type=>"text/javascript"}
    %link{:href => "style.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
    %title
      - if request.path_info =~ /^\/home/
        - title = "G.UI"
      - else
        - title = "G.UI"+request.path_info.split("/").join(" :: ")
      = title
  %body
    .header
      .nav
        %ul.main
          %li.first
            %a{:href=>"/home",:style=>"background-image:url(/home.png)"}
              Home
          %li.first
            %a{:href=>"/docs",:style=>"background-image:url(/documents-inv.png)"}
              Docs
          %li.first
            %a{:href=>"/demos",:style=>"background-image:url(/idea-inv.png)"}
              Demos
          %li.first
            %a{:href=>"/themes",:style=>"background-image:url(/layers-inv.png)"}
              Themes
          %li.first.right
            %a{:href=>"/build",:style=>"background-image:url(/save-inv.png)"}
              Download
      .clear
    = yield
    
