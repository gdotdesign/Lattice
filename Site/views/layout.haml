!!! xml utf-8
!!! strict
%html{:lang=>"en",:"xml:lang"=>"en", :xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %link{:href => "style.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
    %link{:href => "../Themes/Blank/reset.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
    %link{:href => "../Themes/Chrome/theme.css", :rel => "stylesheet", :type => "text/css", :media=>"screen"}/
    %script{:src=>"../mootools/mootools-1.2.4-core.js", :type=>"text/javascript"}
    %script{:src=>"../mootools/mootools-1.2.4-more.js", :type=>"text/javascript"}
    %script{:src=>"../Themes/Chrome/theme.js", :type=>"text/javascript"}
    %script{:src=>"../builds/gdotui-latest.js", :type=>"text/javascript"}
    %title
      - if request.path_info =~ /^\/home/
        - title = "G.UI"
      - else
        - title = "G.UI"+request.path_info.split("/").join(" :: ")
      = title
  %body
    .header
      %h1
        = title
      .nav
        %ul.main
          - d = Dir.entries '../Demos'
          - d.delete '..'
          - d.delete '.'
          - for dir in d
            %li.first
              = dir
              %ul.sec
                - d1 = Dir.entries "../Demos/#{dir}"
                - d1.delete '..'
                - d1.delete '.'
                - for file in d1
                  %li
                    %a{:href=>"/#{dir}/#{file}"}
                      = file
      .clear
    = yield
    
