---JS
window.addEvent('domready', function(){
  defaultBtn = new Core.Toggler();
  
  slider = new Data.Number({label:'Size'})
  slider.addEvent('change',function(value){
    defaultBtn.set('size', value)
  });
  slider.setValue(200)
  
  $$(".demo").adopt(defaultBtn);
  $("options").adopt(slider);
});
